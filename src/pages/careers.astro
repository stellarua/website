                    </svg>

                    @StellarUA
                </a>
                <a href="tel:0800300756" class="phone-link social-link--mob"
                    >0800-300-756
                </a>
                <p class="address">UA 79000 Lviv, Chervonoj Kalyny ave., 58</p>
            </div>
        </div>
    </section>
    <DonateNow />
    <section class="news">
        <div class="container">
            <h2 class="section__title text-center">Related articles</h2>
            <div class="section__text text-center">
                <p>
                    Discover the latest updates and inspiring stories showcasing
                    the positive impact of your support.
                </p>
            </div>
        </div>

        <div class="news-wrapper">
            <div class="container">
                <News />
            </div>
        </div>
    </section>



</Layout>

<style>
    .hero {
        background: #073abe;
        color: #fff;
        padding: 114px 0 110px;
        margin-bottom: -80px;
    }
    .hero .container {
        max-width: 860px;
        text-align: center;
    }
    .hero .section__text {
        color: #fff;
        font-size: 16px;
        line-height: 1.6em;
        max-width: 100%;
        margin-bottom: 0;
    }

    .hero h1 {
        font-size: 24px;
        line-height: 1.4em;
    }

    .hero .section__text p:last-child {
        margin-bottom: 0;
    }
    .careers-img {
        margin-bottom: 30px;
    }
    .careers-img__wrapper {
        padding-top: 50%;
        height: 0;
        position: relative;
        border-radius: 10px;
        overflow: hidden;
    }
    .careers-img__wrapper img {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        max-width: 100%;
        height: 100%;
        max-height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .vacancy-tabs {
        margin: 30px auto 30px;
        box-shadow: 0px 4px 58.5px 0px #d6d6d6;
    }
    .vacancy .container {
        max-width: 670px;
    }
    .vacancy .container-tabs {
        max-width: 100%;
        /* overflow: hidden; */
        padding: 0;
    }
    .vacancy .section__text {
        max-width: 487px;
        margin: 0 auto;
    }
    .vacancy-text {
        color: #a18458;
        max-width: 487px;
        margin: 0 auto 30px;
        font-size: 14px;
    }
    .social-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        margin: 0 auto;
    }
    .phone-link {
        font-size: 24px;
        line-height: 1.8em;
        font-weight: 700;
        display: inline-block;
        margin: 0 auto;
    }
    .contacts {
        display: grid;
        grid-template-columns: 1fr;
        gap: 12px;
        margin-bottom: 30px;
    }
    .news .section__text {
        margin: auto;
        color: #979797;
    }
    .news-wrapper {
        position: relative;
        padding-bottom: 5px;
    }
    .news-wrapper::before {
        content: "";
        position: absolute;
        top: 30px;
        left: 0;
        right: 0;
        bottom: -5px;
        background: #000;
    }

    @media (min-width: 769px) {
        .hero {
            padding: 195px 0 140px;
        }
        .hero h1 {
            font-size: 40px;
        }
        .hero .section__text {
            font-size: 24px;
            line-height: 1.5em;
        }
        .careers-img {
            margin-bottom: 60px;
        }
        .vacancy-text {
            margin: 0 auto 60px;
        }
        .contacts {
            margin-bottom: 60px;
        }
        .news-wrapper::before {
            top: 60px;
            background: url(/images/news-bg.svg), #000;
            background-repeat: no-repeat;
            background-position: top right;
        }
        .news-wrapper .container::after {
            content: "";
            display: block;
            height: 1px;
            width: 100%;
            background: #414141;
            position: relative;
            z-index: 111;
        }
        .vacancy .container-tabs {
            max-width: 670px;
            overflow: unset;
            padding: 0 30px;
        }
        .vacancy-tabs {
            margin: 40px auto 60px;
            border-radius: 10px;
        }
    }
</style>
